#!/bin/bash

# This comment includes the hash of the config file.
# When config.ini.tmpl changes, this hash changes, triggering the script.
# hash: {{ include "dot_mydotfiles/com.ml4w.dotfiles/dot_config/waypaper/config.ini.tmpl" | sha256sum }}

# Only run if waypaper is installed (avoid errors on headless servers)
if command -v waypaper >/dev/null 2>&1; then
    echo "[Waypaper] Config changed. Restoring wallpaper..."
    # We run this in the background so it doesn't block the rest of the apply
    waypaper --restore &
fi